.avatar-hover-box {
  position: relative;
  display: inline-block;
}
.avatar-hover-box .hover-text {
  opacity: 0;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #333;
  background: rgba(255,255,255,0.95);
  padding: 6px 16px;
  border-radius: 8px;
  font-size: 1em;
  pointer-events: none;
  transition: opacity 0.3s;
  white-space: nowrap;
  z-index: 2;
}
.avatar-hover-box:hover .hover-text {
  opacity: 1;
}
.avatar-hover-box:hover img {
  opacity: 0;
  transition: opacity 0.3s;
} 